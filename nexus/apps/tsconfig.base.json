{
  "compilerOptions": {
    /* Target & Module System */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "useDefineForClassFields": true,
    
    /* Emit & Build */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    /* Path Mapping */
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@shared/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@shared/ui-shared": ["libs/ui-shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "tmp"]
}